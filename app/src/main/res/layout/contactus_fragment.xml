<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_50sdp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Contact_Us"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/_17sdp"

            />


        <ImageView
            android:id="@+id/fragment_contact_us_back_img"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="centerCrop"

            android:backgroundTint="@color/red"
            android:layout_gravity="start|center"

            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            />
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        ></ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_20sdp"

        ><FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"



            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/contact_us_cuate"
                android:layout_height="@dimen/_200sdp"></ImageView>
            <FrameLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/Follow_Us"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"></TextView>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/fargment_contact_us_twitter_img"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_awesome_twitter">

                </ImageView> <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/fargment_contact_us_linkedin_img"

                android:scaleType="center"
                android:src="@drawable/icon_awesome_linkedin_in">

            </ImageView> <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/fargment_contact_us_pinterest_img"

                android:scaleType="centerInside"
                android:src="@drawable/icon_awesome_pinterest_p">

            </ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/fargment_contact_us_instagram_img"

                    android:scaleType="centerInside"
                    android:src="@drawable/icon_awesome_instagram">

                </ImageView> <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/fargment_contact_us_facebook_img"

                android:scaleType="centerInside"
                android:src="@drawable/icon_awesome_facebook">

            </ImageView>



            </LinearLayout>
            <TextView
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fargment_contact_us_address_tv"

                android:drawableStart="@drawable/location_icon"
                android:drawablePadding="@dimen/_10sdp"
                android:text="111 Nasr City.567 Cairo-Egypt"
                android:textSize="@dimen/_15ssp"></TextView>
            <TextView
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fargment_contact_us_email_tv"

                android:drawableStart="@drawable/email_icon"
                android:drawablePadding="@dimen/_10sdp"
                android:text="info@gmail.com"
                android:textSize="@dimen/_15ssp"></TextView>
            <TextView
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/fargment_contact_us_phone_tv"

                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/call_icon"
                android:drawablePadding="@dimen/_10sdp"
                android:text="+0123456789"
                android:textSize="@dimen/_15ssp"></TextView>
            <Button
                style="@style/Button"
                android:layout_width="match_parent"
                android:textSize="@dimen/_12ssp"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:id="@+id/fargment_contact_us_contact_us_directly_bt"

                android:layout_gravity="center"

                android:text="@string/Contact_us_Directly"
                android:background="@drawable/about_us_buttom"

                />
        </LinearLayout>
    </FrameLayout>
    </ScrollView>
</LinearLayout>












