<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_item_color_my_booking"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"


    android:paddingBottom="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:id="@+id/card_my_mentainance_vendors_item_cardview"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_5sdp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:textColor="@color/green_header"
    android:text="@string/booked"

android:id="@+id/cared_item_my_booking_booked"
    android:layout_marginStart="@dimen/_6sdp"
    android:drawablePadding="@dimen/_10sdp"
    android:textSize="@dimen/_12sdp"
    android:drawableStart="@drawable/ic_baseline_task_alt_24"
    android:layout_gravity="start|center"
    android:gravity="center"></TextView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:textColor="@color/red"
    android:text="Booked Expired"
    android:visibility="gone"
    android:id="@+id/cared_item_my_booking_booked_exprired"

    android:layout_marginStart="@dimen/_6sdp"
    android:drawablePadding="@dimen/_10sdp"
    android:textSize="@dimen/_12sdp"
    android:drawableStart="@drawable/ic_baseline_highlight_off_24"
    android:layout_gravity="start|center"
    android:gravity="center"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/gray_text"
                android:text="@string/persons"
                android:id="@+id/cared_item_my_booking_group"

                android:layout_marginEnd="@dimen/_6sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:drawableStart="@drawable/ic_baseline_groups_24"
                android:layout_gravity="end|center"
                android:gravity="center"></TextView>



        </FrameLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_6sdp"
            >

                <ImageView
                    android:id="@+id/cared_item_my_booking_img"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
android:background="@drawable/shap"
                    android:src="@drawable/pic"
                    android:scaleType="centerCrop"




                    />

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/cared_item_my_booking_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="mahmoud mohamed"
                    android:textColor="@color/blue_text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginEnd="@dimen/_5sdp"



                    android:id="@+id/cared_item_my_booking_state_tv"

                    android:textColor="@color/green_text"
                    android:text="@string/opend_Now"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_2sdp"

                    android:textSize="@dimen/_12ssp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    >

                    <RatingBar
                        android:id="@+id/cared_item_my_booking_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="3"
                        android:backgroundTint="@color/yello"
                        android:isIndicator="true" />

                    <TextView
                        android:id="@+id/card_my_mentainance_vendors_item_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="(20)"
                        android:ellipsize="end"
                        android:maxLines="1"

                        android:textSize="@dimen/_11ssp"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/cared_item_my_booking_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/METTING_ROOM"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_2sdp"

                    android:layout_marginEnd="@dimen/_5sdp"

                    android:textSize="@dimen/_11ssp"
                    />

            </LinearLayout>



        </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"></ImageView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp"

            android:layout_marginTop="@dimen/_5sdp"

            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"

            >
            <TextView
                android:id="@+id/cared_item_my_booking_calender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_gravity="start|center"
                android:text="1/4/2021 - 3/4/2021"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_baseline_date_range_24"



                android:textSize="@dimen/_12ssp"
                />





        </FrameLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>