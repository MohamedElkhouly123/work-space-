<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_50sdp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Contact_Us"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/_15sdp"

            />


        <ImageView
            android:id="@+id/fragment_about_us_image_back_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="centerCrop"

            android:backgroundTint="@color/blue"
            android:layout_gravity="start|center"

            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            />
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:backgroundTint="@color/gray_image"
        ></ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        ><FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="vertical"



            >


            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_145sdp"
                android:elevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_15sdp">
            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/fragment_about_us_youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:theme="@style/video"
                android:background="@drawable/shap_image_radios"



                app:showFullScreenButton="false" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_5sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
android:id="@+id/fragment_about_us_description_tv"
                android:textSize="@dimen/_13sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"

                android:text="The quick, brown fox jumps over a lazy
                 dog. DJlock by whThe quick, brown fox jumps over a
                 lazy dog. DJs flockThe quick, brown fox jumps over a lazy dog. DJlock by whThe quick, brown fox jumps over a lazy dog. DJs flockThe quick, brown fox jumps over a lazy dog. DJlock by whThe quick, brown fox jumps over a lazy dog. DJs flockThe quick, brown fox jumps over a lazy dog. DJlock by whThe quick, brown fox jumps over a lazy dog. DJs flockThe quick, brown fox jumps over a lazy dog. DJlock by whThe quick, brown fox jumps over a lazy dog. DJs flockThe quick, brown fox jumps over a lazy dog. DJlock by whThe quick, brown fox jumps over a lazy dog. DJs flockThe quick, brown fox jumps over a lazy dog. DJlock by whThe quick, brown fox jumps over a lazy dog. DJs flock ">

            </TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>




    </FrameLayout>
    </ScrollView>
</LinearLayout>